<!-- All polls go here -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>

  <!-- External Stylesheets -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Local Stylesheets -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/profile.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Local Scripts -->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

</head>

<body>
  <header>
    <%- include('partials/header.ejs') %>
      <!-- <h2>Welcome back <%= username %>!</h2> -->
  </header>
  <main>
    <h3 class="pollhistory">
      Your poll history<i class="fa-solid fa-angles-down"></i>
    </h3>
    <% if (Object.keys(object).length === 0) { %>
      <section  class="nopoll">
        <div><h2>No polls here yet!</h2></div>
        <div><p>Start creating interactive and engaging polls to include your friends.</p></div>
        <div><button class="createpoll">Create a poll</button></div>
      </section>
    <% } %>
    <% for (let title in object) { %>
      <% let scores=[]; %>
        <section>
          <form action="/polls/results/<%=object[title][0]['pollId']%>" method="GET">
            <button class="polltitle">
              <%= title %>
            </button>
          </form>
          <p>
            <%= object[title][0]['date_created'] %>
          </p>
          <ul class="chart">
            <% for (let i=0; i < object[title].length; i++) { %>
              <% scores.push(Number(object[title][i].score))%>
                <% } %>
                  <% if (object[title][0].score==='0' ) { %>
                    <p class="noresponse">There's no response to this poll yet</p>
                    <p>Share this poll with your frineds!</p>
                    <p class="icons">
                      <button class="clipboard" href="http://localhost8080/polls/results/<%=object[title][0].pollId%>"><i class="fa-solid fa-link"></i></button>
                      <button><i class="fa-brands fa-square-twitter"></i></button>
                      <button><i class="fa-brands fa-square-facebook"></i></button>
                    </p>
                    <% } else { %>
                      <% for (let i=0; i < object[title].length; i++) { %>
                        
                        <li>
                          <span style="height: <%= Math.round((Number(object[title][i].score) / Math.max(...scores)) * 100) %>%"
                            title="<%= object[title][i].option %>"></span>
                        </li>
                        <% } %>
                          <% } %>
          </ul>

        </section>
        <% } %>
  </main>
</body>

</html>